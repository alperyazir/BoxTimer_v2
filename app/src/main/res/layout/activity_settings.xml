<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.boxtimer_v2.SettingsActivity">

    <Button
        android:id="@+id/buttonRound"
        android:layout_width="89dp"
        android:layout_height="51dp"
        android:onClick="buttonRoundClicked"
        android:text="Round"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonWorkoutClicked"
        android:text="Workout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonRound"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonRound"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonBrake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonBrakeClicked"
        android:text="Brake"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonWorkout"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonWorkout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/textViewRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRound"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewBrake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brake"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewWorkout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
